pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'Compiling the java source code'
                bat 'mvn compile'
            }
        }
        stage('test') {
            steps {
                echo 'Running the compiled java code.'
                bat 'mvn test'

            }
                  stage('package') {
                        steps {
                            echo 'Packing the tested java code.'
                            bat 'mvn package'
                        }
        }
    }
}