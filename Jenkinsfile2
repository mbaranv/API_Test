pipeline {
    agent any
    stages {
        stage('build') {
            steps {
               echo 'Compiling the java source code'
                bat 'mvn compile'
                }
             }

        stage('test') {
            steps {
                echo 'Running the compiled java code.'
                bat 'mvn test'
                }
             }

        stage('report') {
            steps {
                echo  'Reporting the test results'
                junit(
                      allowEmptyResults: true,
                      testResults: '**/target/surefire-reports/*.xml'
                     )
                }
             }
           }
        }