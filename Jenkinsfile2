pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'Compiling the java source code'
                sh 'mvn compile'
            }
        }
        stage('test') {
            steps {
                echo 'Running the compiled java code.'
                sh 'mvn test'

            }
        }
                stage('package') {
                                steps {
                                    echo 'Packing the tested java code.'
                                    sh 'mvn package'
                                }
    }
}
}